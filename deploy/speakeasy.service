[Unit]
Description=SpeakEasy Serbian Language Tutor
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/speakeasy
ExecStart=/var/www/speakeasy/speakeasy-linux
Restart=on-failure
RestartSec=5

Environment=PORT=8282
Environment=SPEAKEASY_DATA_DIR=/var/www/speakeasy
Environment=GOOGLE_TTS_API_KEY=your-api-key-here

[Install]
WantedBy=multi-user.target
