[Unit]
Description=SpeakEasy Language Tutor
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/speakeasy
ExecStart=/var/www/speakeasy/speakeasy
Restart=on-failure
RestartSec=5

Environment=PORT=8282
Environment=SPEAKEASY_DATA_DIR=/var/www/speakeasy
EnvironmentFile=-/var/www/speakeasy/.env

[Install]
WantedBy=multi-user.target
